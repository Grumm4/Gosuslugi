        <Menu x:Name="MenuTopPanel" Grid.Row="1" Height="32" Width="auto" Background="Transparent">
            <DockPanel Width="auto" Focusable="False" Margin="-5, 0, 0,0">
                <Button x:Name="LogoutMenu" Height="30" MinWidth="50"  BorderBrush="Black" Content="Выйти" FontSize="14" Click="LogoutMenu_Click"/>
                <Separator Width="1" Background="Transparent"/>
                <Button x:Name="CreateOrderMenu" Height="30" MinWidth="50"  BorderBrush="Black" Content="Создать заказ" FontSize="14" Click="CreateOrderMenu_Click"/>
                <Separator Width="1" Background="Transparent"/>
