                            <StackPanel>
                                <Button x:Name="RejectOrder" Content="Отказаться от заказа" Click="RejectOrder_Click" CommandParameter="{Binding Id}" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </DataGrid.Columns>
        </DataGrid>-->
    </Grid>
        
    
</Window>
