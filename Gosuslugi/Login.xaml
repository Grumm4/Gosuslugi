<Window x:Class="Gosuslugi.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gosuslugi"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="800" Loaded="LoginLoaded" WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="LoginBox" TextWrapping="Wrap" Grid.Row="0" Width="250" Height="35" Tag="Логин" GotFocus="RemoveText" LostFocus="AddText" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="PwdBox" Grid.Row="1" Width="250" Height="35" VerticalContentAlignment="Center"/>
        <Button x:Name="LoginBt" Content="Войти" FontSize="16" Width="250" Height="35" Grid.Row="2" Click="LoginBt_Click"/>
        <Button Grid.Row="2" HorizontalAlignment="Right" Width="50" Height="30" Content="reg" x:Name="BtToReg" Click="BtToReg_Click"/>
    </Grid>
</Window>
