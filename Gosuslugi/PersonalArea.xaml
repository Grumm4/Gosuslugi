<Window x:Class="Gosuslugi.PersonalArea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gosuslugi"
        mc:Ignorable="d"
        Title="PersonalArea" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LoginTb" TextWrapping="Wrap"  Grid.Row="0" Grid.Column="1" BorderBrush="Black" Width="120" IsEnabled="False" Margin="4" Tag="Login"/>
        <Label Content="Логин" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="4"/>
        <Button x:Name="ChangeLoginBt" Grid.Column="2" Grid.Row="0" Content="Измеить" Margin="4" Click="ChangePersonalData" Tag="Login"/>

        <TextBox x:Name="NameTb"  Grid.Row="1" Grid.Column="1" BorderBrush="Black" TextWrapping="Wrap" Width="120" IsEnabled="False" Margin="4" Tag="Name"/>
        <Label Content="ФИО" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="4"/>
        <Button x:Name="ChangeNameBt" Grid.Column="2" Grid.Row="1" Content="Измеить" Margin="4" Click="ChangePersonalData" Tag="Name"/>

        <TextBox x:Name="PhoneTb" Grid.Row="2" Grid.Column="1" BorderBrush="Black" Width="120" IsEnabled="False" TextWrapping="Wrap" Margin="4" Tag="Phone"/>
        <Label Content="Номер телефона" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="4"/>
        <Button x:Name="ChangePhoneBt" Grid.Column="2" Grid.Row="2" Content="Измеить" Margin="4" Click="ChangePersonalData" Tag="Phone"/>

        <TextBox x:Name="MailTb" Grid.Row="3" Grid.Column="1" Width="120" IsEnabled="False" BorderBrush="Black" TextWrapping="Wrap" Margin="4" Tag="Mail"/>
        <Label Content="Почта" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="4"/>
        <Button x:Name="ChangeMailBt" Grid.Column="2" Grid.Row="3" Content="Измеить" Margin="4" Click="ChangePersonalData" Tag="Mail"/>
    </Grid>
</Window>
